<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/classengage/db" VERSION="20251222" COMMENT="XMLDB file for Moodle mod/classengage - Enterprise Edition"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="classengage" COMMENT="Main table for classengage activity instances">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Foreign key to course table"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="Activity name"/>
        <FIELD NAME="intro" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Activity description"/>
        <FIELD NAME="introformat" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Format of intro field"/>
        <FIELD NAME="grade" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="100" SEQUENCE="false" COMMENT="Maximum grade"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="course" TYPE="foreign" FIELDS="course" REFTABLE="course" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="classengage_slides" COMMENT="Stores uploaded lecture slides">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="classengageid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Foreign key to classengage table"/>
        <FIELD NAME="title" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="Slide title"/>
        <FIELD NAME="filename" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="Original filename"/>
        <FIELD NAME="filepath" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="Path to stored file"/>
        <FIELD NAME="filesize" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="File size in bytes"/>
        <FIELD NAME="mimetype" TYPE="char" LENGTH="100" NOTNULL="true" SEQUENCE="false" COMMENT="MIME type of file"/>
        <FIELD NAME="status" TYPE="char" LENGTH="50" NOTNULL="true" DEFAULT="uploaded" SEQUENCE="false" COMMENT="Processing status: uploaded, completed, error"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="User who uploaded the slide"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <!-- NLP Job Tracking Fields -->
        <FIELD NAME="nlp_job_status" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="idle" SEQUENCE="false" COMMENT="NLP job lifecycle: idle, pending, running, completed, failed"/>
        <FIELD NAME="nlp_job_progress" TYPE="int" LENGTH="3" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="NLP job progress percentage 0-100"/>
        <FIELD NAME="nlp_job_id" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Adhoc task ID for tracking"/>
        <FIELD NAME="nlp_job_error" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Error message if job failed"/>
        <FIELD NAME="nlp_questions_count" TYPE="int" LENGTH="5" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Number of questions generated"/>
        <FIELD NAME="nlp_job_started" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Timestamp when job started"/>
        <FIELD NAME="nlp_job_completed" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Timestamp when job completed/failed"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="classengageid" TYPE="foreign" FIELDS="classengageid" REFTABLE="classengage" REFFIELDS="id"/>
        <KEY NAME="userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="status" UNIQUE="false" FIELDS="status"/>
        <INDEX NAME="nlp_job_status" UNIQUE="false" FIELDS="nlp_job_status" COMMENT="For efficient NLP job status queries"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="classengage_questions" COMMENT="Stores quiz questions (generated or manual)">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="classengageid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Foreign key to classengage table"/>
        <FIELD NAME="slideid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Foreign key to classengage_slides (null if manual)"/>
        <FIELD NAME="questiontext" TYPE="text" NOTNULL="true" SEQUENCE="false" COMMENT="The question text"/>
        <FIELD NAME="questiontype" TYPE="char" LENGTH="50" NOTNULL="true" DEFAULT="multichoice" SEQUENCE="false" COMMENT="Question type: multichoice, truefalse, shortanswer"/>
        <FIELD NAME="optiona" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Option A"/>
        <FIELD NAME="optionb" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Option B"/>
        <FIELD NAME="optionc" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Option C"/>
        <FIELD NAME="optiond" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Option D"/>
        <FIELD NAME="correctanswer" TYPE="char" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Correct answer (A/B/C/D or specific text)"/>
        <FIELD NAME="difficulty" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="medium" SEQUENCE="false" COMMENT="Difficulty level: easy, medium, hard"/>
        <FIELD NAME="bloomlevel" TYPE="char" LENGTH="20" NOTNULL="false" SEQUENCE="false" COMMENT="Bloom's taxonomy level: remember, understand, apply, analyze, evaluate, create"/>
        <FIELD NAME="rationale" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="AI-generated explanation for the correct answer"/>
        <FIELD NAME="status" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="pending" SEQUENCE="false" COMMENT="Status: pending, approved, rejected"/>
        <FIELD NAME="source" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="nlp" SEQUENCE="false" COMMENT="Source: nlp, manual"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="classengageid" TYPE="foreign" FIELDS="classengageid" REFTABLE="classengage" REFFIELDS="id"/>
        <KEY NAME="slideid" TYPE="foreign" FIELDS="slideid" REFTABLE="classengage_slides" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="status" UNIQUE="false" FIELDS="status"/>
        <INDEX NAME="difficulty" UNIQUE="false" FIELDS="difficulty"/>
        <INDEX NAME="classengageid_status" UNIQUE="false" FIELDS="classengageid, status" COMMENT="Enterprise: Filter questions by activity and status"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="classengage_sessions" COMMENT="Stores quiz session information">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="classengageid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Foreign key to classengage table"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="Session name"/>
        <FIELD NAME="numquestions" TYPE="int" LENGTH="5" NOTNULL="true" DEFAULT="10" SEQUENCE="false" COMMENT="Number of questions in session"/>
        <FIELD NAME="timelimit" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="30" SEQUENCE="false" COMMENT="Time limit per question in seconds"/>
        <FIELD NAME="shufflequestions" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="1" SEQUENCE="false" COMMENT="Shuffle question order"/>
        <FIELD NAME="shuffleanswers" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="1" SEQUENCE="false" COMMENT="Shuffle answer options"/>
        <FIELD NAME="status" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="ready" SEQUENCE="false" COMMENT="Status: ready, active, paused, completed"/>
        <FIELD NAME="currentquestion" TYPE="int" LENGTH="5" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Current question number (0-based)"/>
        <FIELD NAME="questionstarttime" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="When current question was started"/>
        <FIELD NAME="paused_at" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Timestamp when session was paused"/>
        <FIELD NAME="pause_duration" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Total accumulated pause duration in seconds"/>
        <FIELD NAME="timer_remaining" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Remaining timer value when paused"/>
        <FIELD NAME="createdby" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="User who created session"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="timestarted" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="When session was started"/>
        <FIELD NAME="timecompleted" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="When session was completed"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="classengageid" TYPE="foreign" FIELDS="classengageid" REFTABLE="classengage" REFFIELDS="id"/>
        <KEY NAME="createdby" TYPE="foreign" FIELDS="createdby" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="status" UNIQUE="false" FIELDS="status"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="classengage_session_questions" COMMENT="Maps questions to sessions in specific order">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="sessionid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Foreign key to classengage_sessions"/>
        <FIELD NAME="questionid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Foreign key to classengage_questions"/>
        <FIELD NAME="questionorder" TYPE="int" LENGTH="5" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Order in which question appears"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="sessionid" TYPE="foreign" FIELDS="sessionid" REFTABLE="classengage_sessions" REFFIELDS="id"/>
        <KEY NAME="questionid" TYPE="foreign" FIELDS="questionid" REFTABLE="classengage_questions" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="sessionid_order" UNIQUE="true" FIELDS="sessionid, questionorder"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="classengage_responses" COMMENT="Stores student responses to quiz questions">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="sessionid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Foreign key to classengage_sessions"/>
        <FIELD NAME="questionid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Foreign key to classengage_questions"/>
        <FIELD NAME="classengageid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Foreign key to classengage (for easy lookup)"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="User who submitted response"/>
        <FIELD NAME="answer" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="The answer submitted"/>
        <FIELD NAME="iscorrect" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Whether answer was correct"/>
        <FIELD NAME="score" TYPE="number" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" DECIMALS="2" COMMENT="Score for this response"/>
        <FIELD NAME="responsetime" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Time taken to respond (seconds)"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="sessionid" TYPE="foreign" FIELDS="sessionid" REFTABLE="classengage_sessions" REFFIELDS="id"/>
        <KEY NAME="questionid" TYPE="foreign" FIELDS="questionid" REFTABLE="classengage_questions" REFFIELDS="id"/>
        <KEY NAME="classengageid" TYPE="foreign" FIELDS="classengageid" REFTABLE="classengage" REFFIELDS="id"/>
        <KEY NAME="userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="session_user" UNIQUE="false" FIELDS="sessionid, userid"/>
        <INDEX NAME="session_question_user" UNIQUE="true" FIELDS="sessionid, questionid, userid" COMMENT="One response per user per question per session"/>
        <INDEX NAME="classengageid_timecreated" UNIQUE="false" FIELDS="classengageid, timecreated" COMMENT="Enterprise: Activity-level analytics queries"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="classengage_clicker_devices" COMMENT="Maps clicker device IDs to Moodle users">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Foreign key to user table"/>
        <FIELD NAME="clickerid" TYPE="char" LENGTH="100" NOTNULL="true" SEQUENCE="false" COMMENT="Unique clicker device identifier (e.g., serial number)"/>
        <FIELD NAME="contextid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Context where registered"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="When device was registered"/>
        <FIELD NAME="lastused" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Last time device was used"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="clickerid" UNIQUE="true" FIELDS="clickerid" COMMENT="Each clicker can only be registered to one user"/>
        <INDEX NAME="userid_clickerid" UNIQUE="true" FIELDS="userid, clickerid"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="classengage_connections" COMMENT="Tracks active client connections for real-time status updates">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="sessionid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Foreign key to classengage_sessions"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Foreign key to user table"/>
        <FIELD NAME="connectionid" TYPE="char" LENGTH="64" NOTNULL="true" SEQUENCE="false" COMMENT="Unique connection identifier"/>
        <FIELD NAME="transport" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="polling" SEQUENCE="false" COMMENT="Transport type: websocket, polling, sse"/>
        <FIELD NAME="status" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="connected" SEQUENCE="false" COMMENT="Status: connected, disconnected, answering"/>
        <FIELD NAME="current_question_answered" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Whether user answered current question"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="sessionid" TYPE="foreign" FIELDS="sessionid" REFTABLE="classengage_sessions" REFFIELDS="id"/>
        <KEY NAME="userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="connectionid" UNIQUE="true" FIELDS="connectionid"/>
        <INDEX NAME="sessionid_status" UNIQUE="false" FIELDS="sessionid, status"/>
        <INDEX NAME="sessionid_userid" UNIQUE="false" FIELDS="sessionid, userid"/>
        <INDEX NAME="timemodified" UNIQUE="false" FIELDS="timemodified"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="classengage_response_queue" COMMENT="Temporary queue for batch processing responses under high load">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="sessionid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Foreign key to classengage_sessions"/>
        <FIELD NAME="questionid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Foreign key to classengage_questions"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Foreign key to user table"/>
        <FIELD NAME="answer" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="The answer submitted"/>
        <FIELD NAME="client_timestamp" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Client-side timestamp for latency calculation"/>
        <FIELD NAME="server_timestamp" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Server-side timestamp when received"/>
        <FIELD NAME="processed" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Whether response has been processed"/>
        <FIELD NAME="is_late" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Whether response was submitted after timer expired"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="sessionid" TYPE="foreign" FIELDS="sessionid" REFTABLE="classengage_sessions" REFFIELDS="id"/>
        <KEY NAME="questionid" TYPE="foreign" FIELDS="questionid" REFTABLE="classengage_questions" REFFIELDS="id"/>
        <KEY NAME="userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="processed_timestamp" UNIQUE="false" FIELDS="processed, server_timestamp"/>
        <INDEX NAME="session_question_user" UNIQUE="false" FIELDS="sessionid, questionid, userid"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="classengage_session_log" COMMENT="Comprehensive logging for diagnostics and analytics">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="sessionid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Foreign key to classengage_sessions"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Foreign key to user table (null for system events)"/>
        <FIELD NAME="event_type" TYPE="char" LENGTH="50" NOTNULL="true" SEQUENCE="false" COMMENT="Type of event: session_start, session_end, response, error, warning"/>
        <FIELD NAME="event_data" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="JSON-encoded event details"/>
        <FIELD NAME="latency_ms" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Latency in milliseconds for response events"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="sessionid" TYPE="foreign" FIELDS="sessionid" REFTABLE="classengage_sessions" REFFIELDS="id"/>
        <KEY NAME="userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="sessionid_eventtype" UNIQUE="false" FIELDS="sessionid, event_type"/>
        <INDEX NAME="timecreated" UNIQUE="false" FIELDS="timecreated"/>
        <INDEX NAME="userid_timecreated" UNIQUE="false" FIELDS="userid, timecreated" COMMENT="Enterprise: User activity timeline queries"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="classengage_analytics_cache" COMMENT="Pre-computed analytics metrics for enterprise dashboard performance">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="sessionid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Foreign key to classengage_sessions"/>
        <FIELD NAME="metric_type" TYPE="char" LENGTH="50" NOTNULL="true" SEQUENCE="false" COMMENT="Type of metric: summary, performance, timeline, distribution"/>
        <FIELD NAME="metric_key" TYPE="char" LENGTH="100" NOTNULL="true" SEQUENCE="false" COMMENT="Specific metric identifier within type"/>
        <FIELD NAME="metric_value" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="JSON-encoded metric data"/>
        <FIELD NAME="computed_at" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Timestamp when metric was computed"/>
        <FIELD NAME="expires_at" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Timestamp when cache expires"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="sessionid" TYPE="foreign" FIELDS="sessionid" REFTABLE="classengage_sessions" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="sessionid_metrictype" UNIQUE="false" FIELDS="sessionid, metric_type"/>
        <INDEX NAME="sessionid_metrickey" UNIQUE="true" FIELDS="sessionid, metric_type, metric_key" COMMENT="Unique metric per session"/>
        <INDEX NAME="expires_at" UNIQUE="false" FIELDS="expires_at" COMMENT="For cleanup of expired cache entries"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>

