<div id="generator-loading" class="text-center p-5">
    <i class="fa fa-spinner fa-spin fa-3x"></i>
    <p class="mt-2">{{#str}} inspectingdocument, mod_classengage {{/str}}</p>
</div>

<div id="generator-content" class="d-none">
    <!-- Settings Bar -->
    <div class="card bg-light mb-3">
        <div class="card-body p-3">
            <div class="form-row">
                <div class="col-md-3 mb-2">
                     <label for="id_pagerange"><strong>{{#str}} pagerange, mod_classengage {{/str}}</strong> <i class="fa fa-info-circle text-muted" title="{{#str}} pagerange_help, mod_classengage {{/str}}"></i></label>
                     <input type="text" class="form-control" id="id_pagerange" placeholder="e.g. 1-5, 8, 10-12">
                </div>
                <div class="col-md-3 mb-2">
                    <label for="id_numquestions"><strong>{{#str}} numberofquestions, mod_classengage {{/str}}</strong></label>
                    <select class="form-control" id="id_numquestions">
                        {{#numquestions_options}}
                            <option value="{{.}}">{{.}}</option>
                        {{/numquestions_options}}
                    </select>
                </div>
                <div class="col-md-3 mb-2">
                    <label for="id_difficulty"><strong>{{#str}} difficulty, mod_classengage {{/str}}</strong> <i class="fa fa-info-circle text-muted" title="{{#str}} difficulty_help, mod_classengage {{/str}}"></i></label>
                    <select class="form-control" id="id_difficulty">
                        <option value="easy">{{#str}} easy, mod_classengage {{/str}}</option>
                        <option value="medium" selected>{{#str}} medium, mod_classengage {{/str}}</option>
                        <option value="hard">{{#str}} hard, mod_classengage {{/str}}</option>
                        <option value="mixed">{{#str}} mixed, mod_classengage {{/str}}</option>
                    </select>
                </div>
                <div class="col-md-3 mb-2">
                    <label for="id_cognitive"><strong>{{#str}} cognitivelevel, mod_classengage {{/str}}</strong> <i class="fa fa-info-circle text-muted" title="{{#str}} cognitivelevel_help, mod_classengage {{/str}}"></i></label>
                    <select class="form-control" id="id_cognitive">
                        <option value="remember">{{#str}} bloom_remember, mod_classengage {{/str}}</option>
                        <option value="understand">{{#str}} bloom_understand, mod_classengage {{/str}}</option>
                        <option value="apply" selected>{{#str}} bloom_apply, mod_classengage {{/str}}</option>
                        <option value="analyze">{{#str}} bloom_analyze, mod_classengage {{/str}}</option>
                        <option value="evaluate">{{#str}} bloom_evaluate, mod_classengage {{/str}}</option>
                        <option value="create">{{#str}} bloom_create, mod_classengage {{/str}}</option>
                        <option value="mixed">{{#str}} mixed, mod_classengage {{/str}}</option>
                    </select>
                </div>
            </div>
            


            <!-- Advanced Distribution Panels (Hidden by default) -->
            <div id="advanced-distribution-panel" class="d-none mt-3 border-top pt-3">
                 <div class="alert alert-info py-1 px-2 mb-3">
                    <small><i class="fa fa-info-circle"></i> {{#str}} distribution_help, mod_classengage {{/str}}</small>
                </div>
                
                <div class="row">
                    <!-- Difficulty Distribution -->
                    <div class="col-md-6 border-right">
                        <h6>{{#str}} difficulty_distribution, mod_classengage {{/str}}</h6>
                        <div class="distribution-inputs" id="difficulty-dist">
                             <div class="input-group input-group-sm mb-2">
                                <div class="input-group-prepend"><span class="input-group-text" style="width: 80px;">Easy</span></div>
                                <input type="number" class="form-control dist-input" data-type="difficulty" data-key="easy" value="0" min="0">
                            </div>
                            <div class="input-group input-group-sm mb-2">
                                <div class="input-group-prepend"><span class="input-group-text" style="width: 80px;">Medium</span></div>
                                <input type="number" class="form-control dist-input" data-type="difficulty" data-key="medium" value="0" min="0">
                            </div>
                            <div class="input-group input-group-sm mb-2">
                                <div class="input-group-prepend"><span class="input-group-text" style="width: 80px;">Hard</span></div>
                                <input type="number" class="form-control dist-input" data-type="difficulty" data-key="hard" value="0" min="0">
                            </div>
                            <small class="text-danger d-none validation-msg" id="diff-validation-msg"></small>
                        </div>
                    </div>

                    <!-- Cognitive Distribution -->
                    <div class="col-md-6">
                        <h6>{{#str}} cognitive_distribution, mod_classengage {{/str}}</h6>
                        <div class="distribution-inputs" id="cognitive-dist">
                            <!-- Helper: We will just show 3 common ones to save space, or all 6? Let's show all 6 but compact -->
                            <div class="row">
                                <div class="col-6">
                                     <div class="input-group input-group-sm mb-2">
                                        <div class="input-group-prepend"><span class="input-group-text" style="width: 80px;">Remember</span></div>
                                        <input type="number" class="form-control dist-input" data-type="bloom" data-key="remember" value="0" min="0">
                                    </div>
                                    <div class="input-group input-group-sm mb-2">
                                        <div class="input-group-prepend"><span class="input-group-text" style="width: 80px;">Understand</span></div>
                                        <input type="number" class="form-control dist-input" data-type="bloom" data-key="understand" value="0" min="0">
                                    </div>
                                    <div class="input-group input-group-sm mb-2">
                                        <div class="input-group-prepend"><span class="input-group-text" style="width: 80px;">Apply</span></div>
                                        <input type="number" class="form-control dist-input" data-type="bloom" data-key="apply" value="0" min="0">
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="input-group input-group-sm mb-2">
                                        <div class="input-group-prepend"><span class="input-group-text" style="width: 80px;">Analyze</span></div>
                                        <input type="number" class="form-control dist-input" data-type="bloom" data-key="analyze" value="0" min="0">
                                    </div>
                                    <div class="input-group input-group-sm mb-2">
                                        <div class="input-group-prepend"><span class="input-group-text" style="width: 80px;">Evaluate</span></div>
                                        <input type="number" class="form-control dist-input" data-type="bloom" data-key="evaluate" value="0" min="0">
                                    </div>
                                    <div class="input-group input-group-sm mb-2">
                                        <div class="input-group-prepend"><span class="input-group-text" style="width: 80px;">Create</span></div>
                                        <input type="number" class="form-control dist-input" data-type="bloom" data-key="create" value="0" min="0">
                                    </div>
                                </div>
                            </div>
                            <small class="text-danger d-none validation-msg" id="bloom-validation-msg"></small>
                        </div>
                    </div>
                </div>
        </div>
    </div>

    <!-- Slides List Headers -->
    <div class="row font-weight-bold border-bottom pb-2 mb-2 d-none d-md-flex">
        <div class="col-1 text-center">
            <input type="checkbox" id="select-all-slides" checked>
        </div>
        <div class="col-2">{{#str}} page, mod_classengage {{/str}}</div>
        <div class="col-5">{{#str}} contenttext, mod_classengage {{/str}}</div>
        <div class="col-4">
            <div class="d-flex align-items-center">
                <input type="checkbox" id="select-all-images" class="mr-2" checked>
                {{#str}} images, mod_classengage {{/str}}
            </div>
        </div>
    </div>

    <!-- Slides Container -->
    <div id="slides-container" style="max-height: 500px; overflow-y: auto;">
        <!-- Rows will be injected here -->
    </div>
</div>
